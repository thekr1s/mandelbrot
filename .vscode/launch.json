            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'mandelbrot'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=mandelbrot",
                    "--package=mandelbrot"
